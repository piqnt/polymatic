{
  "name": "polymatic",
  "version": "0.0.7",
  "description": "Minimalist framework for building games and interactive visual application",
  "keywords": [
    "framework",
    "engine",
    "game",
    "interactive",
    "visual",
    "minimalist",
    "middleware",
    "ecs",
    "entity-component-system",
    "data-driven"
  ],
  "author": "Ali Shakiba",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/polymatic.js",
  "module": "./dist/polymatic.js",
  "browser": "./dist/polymatic.umd.cjs",
  "jsdelivr": "./dist/polymatic.umd.cjs",
  "unpkg": "./dist/polymatic.umd.cjs",
  "types": "./dist/polymatic.d.ts",
  "exports": {
    ".": {
